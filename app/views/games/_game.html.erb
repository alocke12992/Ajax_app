
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="game-item" data-id=<%= game.id %> data-name="<%= game.name %>" >
          Game Name: <%= game.name %> <br>
          Description: <%=  game.description %>
        </div> 
      </div>
      <div class="card-action">
        <button class="btn" id="edit-game">Edit</button>
        <button class="btn" id="delete-game">Delete</button>
      </div>
    </div>
  </div>
</div>